<div class="page-header">
  <%= link_to new_produto_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus "></span>
    New Produto
  <% end %>
  <h1>Listing produtos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Imagem</th>
            <th>Descricao</th>
            <th>Quantidade</th>
            <th>Tipo produto</th>
            <th>Valor</th>
            <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @produtos) do |produto| %>
            <td><%= produto.nome %></td>
            <td><img src="<%= produto.imagem %>" width="50px" /></td>
            <td><%= produto.descricao %></td>
            <td><%= produto.quantidade %></td>
            <td><%= produto.tipo_produto.nome %></td>
            <td><%= produto.valor %></td>
            <td><%= link_to 'Exibir', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Deletar', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
