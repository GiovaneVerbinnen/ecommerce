<!-- Sidebar-->
<div class="bg-white text-center" id="sidebar-wrapper">
    <h3 style="padding:10px;">Categorias</h3>
    <div class="list-group list-group-flush border-bottom ">
        <% TipoProduto.all.each do |tipo_produto| %>
            <a class="list-group-item list-group-item-action list-group-item-light p-3"
                href="/?tipo_produto=<%= tipo_produto.id %>">
                <%= tipo_produto.nome.upcase %>
            </a>
            <% end %>
    </div>
</div>
<!-- Sidebar-->

<p id="notice">
    <%= notice %>
</p>
<!-- Page content wrapper-->
<div id="page-content-wrapper">

    <!-- Page content-->
    <div class="row">

        <!--<div class="col-lg-3">

            <h1 class="my-4">Categorias</h1>
    <div class="list-group">
      <% TipoProduto.all.each do |tipo_produto| %>
        <a href="/?tipo_produto=<%= tipo_produto.id %>" class="list-group-item"><%= tipo_produto.nome %></a>
      <% end %>
    </div> 

        </div>-->
        <!-- /.col-lg-3 -->

        <div class="col-lg-10 mx-auto">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid"
                            src="https://www.wearewhatweeat.co.nz/content/dam/wawwe/Recipes/recipe-banners-1600x530/old-smokey-burger-1600x1530.jpg"
                            alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid"
                            src="https://www.wearewhatweeat.co.nz/content/dam/wawwe/Recipes/recipe-banner-small-desktop-1440x530/One-Pot-Mac-Cheese-1440x530-B.jpg"
                            alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid"
                            src="https://www.wearewhatweeat.co.nz/content/dam/wawwe/Recipes/recipe-banner-small-desktop-1440x530/Stovetop-Chicken-Biriyani-1440x530-B.jpg"
                            alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">

                <% if @produtos.blank? %>
                    <h5>Nenhum produto encontrado</h5>
                <% else %>
                    <% @produtos.each do |produto| %>
                        <div class="col-lg-4 col-md-6 mb-4 text-center">
                            <div class="card h-100">
                            <a href="/produto/<%= produto.id %>">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/produto/<%= produto.id %>">
                                    <%= produto.nome.upcase %>
                                    <span style="display:block; "><img src="<%= produto.imagem %>"
                                            class="img-fluid"    width="50px"    /></span>
                                    </a>
                                </h5>
                                <h5>R$<%= produto.valor %>
                                </h5>
                                <p class="card-text">
                                    <%= produto.descricao.truncate(100) %>
                                </p>
                            </div>
                            <div class="card-footer">
                                <% if existe_carrinho?(produto.id) %>
                                <a href="/produto/<%= produto.id %>/remover" class="btn btn btn-danger float-right">
                                    Remover
                                </a>
                                <% else %>
                                <a href="/produto/<%= produto.id %>/adicionar" class="btn btn btn-success float-right">
                                    Adicionar
                                </a>
                                <% end %>

                            </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->

    <div style="justify-content: center; display: flex;">
        <div class="digg_pagination">
            <%= will_paginate @produtos, :container=> false %>
        </div>
    </div>

</div>