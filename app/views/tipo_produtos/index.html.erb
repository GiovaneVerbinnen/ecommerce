<div class="page-header">
  <%= link_to new_tipo_produto_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus "></span>
    Novo Produto
  <% end %>
  <h1>Listando tipos de produtos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th colspan="3" class="text-center">Ações</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tipo_produtos) do |tipo_produto| %>
            <td><%= tipo_produto.nome %></td>
            <td><%= link_to 'Exibir', tipo_produto %></td>
        <td><%= link_to 'Editar', edit_tipo_produto_path(tipo_produto) %></td>
        <td><%= link_to 'Deletar', tipo_produto, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
